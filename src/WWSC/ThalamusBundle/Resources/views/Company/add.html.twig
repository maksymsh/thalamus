<div class="modal-content new-company">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">Ã—</button>
        <h1 class="form-add-company-heading">{% trans %} Add a new company{% endtrans %}</h1>
    </div>
    <form class="form-add-company" action="{{ path('wwsc_thalamus_add_company') }}"  method="Post">
        <p>{% trans %} After you add a company you'll be able to add people to that company.{% endtrans %}</p>
        <div class="form-group">
            <label>{% trans %} Enter a new company name{% endtrans %}</label>
            <div class="col-xs-12">
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="form-group">
            <label>{% trans %} Company abbreviation{% endtrans %}</label>
            <div class="col-xs-12">
                {{form_widget(form.abbreviation)}}
            </div>
        </div>
        <div class="form-group">
            <label>{% trans %} Select the role of company{% endtrans %}</label>
            <div class="col-xs-12">
                {{ form_widget(form.roles) }}
            </div>
        </div>    
        {{ form_widget(form._token) }}
        <button class="btn btn-sm btn-primary" type="submit">{% trans %} Create company{% endtrans %}</button>
    </form>
</div>
