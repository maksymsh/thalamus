{% extends "WWSCThalamusBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
    <div class="modal-content container">
        <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
            <h3 aligh=center>{% trans %}Change password{% endtrans %}</h3>
            {% if (form_errors(form.plainPassword)) %}
                <div class="alert alert-error error" role="alert">{{ form_errors(form.plainPassword) }}</div>
            {% endif %}
            <div class="form-group">
                {{form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder' : 'Password', 'pattern' : '.{8,20}'}} )}}
            </div>
            <div class="form-group">
                {{form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder' : 'Confirm password', 'pattern' : '.{8,20}'}} )}}
            </div>
            {{ form_widget(form._token) }}
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit"  type="submit">{{ 'resetting.reset.submit'|trans }}</button>
            </div>
        </form>
    </div>    
{% endblock fos_user_content %}
