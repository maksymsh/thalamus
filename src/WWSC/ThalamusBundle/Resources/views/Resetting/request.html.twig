{% extends "WWSCThalamusBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
    <div class="modal-content">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-signin">
            <h3 aligh=center>{% trans %}Reset  password{% endtrans %}</h3>
            {% if invalid_username is defined %}
                <p class="error">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
            {% endif %}
            <div class="form-group">
                <input type="text" class="form-control" id="username" placeholder="{{ 'resetting.request.username'|trans }}" name="username" required="required" />
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit"  type="submit">{{ 'resetting.request.submit'|trans }}</button>
            </div>
        </form>
    </div>    
{% endblock fos_user_content %}
