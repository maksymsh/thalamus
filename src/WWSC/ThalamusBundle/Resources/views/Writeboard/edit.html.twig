<script type="text/javascript">
$('.attachment-files').fileupload({
    url: "{{ oneup_uploader_endpoint('files') }}",
    dataType: 'json',
    downloadTemplateId: null,
    type: 'POST'
});
</script>
<div class="panel-forms form-edit-project">
    <form class="form-edit-writeboard col-md-12" action="{{ path('wwsc_thalamus_project_writeboard_edit', {'project': slugProject, 'id': oWriteboard.id} ) }}"  method="Post">  
        <div class="error"></div>
        <div class="col-md-12 form-group">
            <input type="hidden" id="wwsc_thalamusbundle_writeboard_name" name="wwsc_thalamusbundle_writeboard[name]" value="{{oWriteboard.name}}"> 
            {{ form_widget(form.description, {'value' : oWriteboard.description } ) }}  
        </div> 
        <div class="form-group">
            {% include 'WWSCThalamusBundle:File:attachment-form.html.twig'  with {'aFiles': oWriteboard.files, 'project' : slugProject} %} 
        </div>
        {{ form_widget(form._token) }}
        <div class="col-md-12 btn-action without-padding">
            <button class="btn btn-sm btn-primary btn-save" type="submit">{% trans %}Update this Writeboard{% endtrans %}</button>
            <span>or</span> <a class="btn-cancel" href="{{ path ('wwsc_thalamus_project_writeboards', {'project': slugProject }) }}"> {% trans %}Cancel{% endtrans %} </a> 
        </div>
    </form>
</div>
       